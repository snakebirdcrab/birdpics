html
  box-sizing border-box


body
	font-family 'Helvetica'
	font-size 24px
	color #34495E
	margin 0
	padding 0
	border 0
	outline 0
	vertical-align baseline
	background #f8f8fa

#app-container
	width 100%
	min-width 1200px
	position fixed
	top 0
	bottom 0

#header
	position relative
	height 100px
	padding 10px 0
	width 100%
	text-align center
	display block
	opacity .8
	z-index 4
	background #f8f8fa

	.h1-text
		font-size 90px
		font-weight 100
		color #333333

#gallery-container
	position fixed
	top 0
	padding-top 140px
	bottom 0
	overflow-y scroll

	#gallery
		margin 0px auto
		z-index 1
		min-width 1500px

		.thumb-block
			float left
			margin 10px
			height 150px
			width 150px
			display flex
			align-items center

			.photo-container
				margin 0px auto
				display flex
				align-items center
			img
				margin 0px auto
				box-shadow 8px 8px 10px #999999
				&:hover
					cursor pointer
					box-shadow 12px 12px 10px #999999
					

#greyout
	position fixed
	width 100%
	height 100%
	display none
	background-color black
	opacity .85
	z-index 5

	&.visible
		display block

.flex-center
	display flex
	align-items center

#lightbox-container
	position fixed
	bottom 0
	top 0
	width 100%
	padding 15% 0
	z-index 10
	display none

	#close-button
		color white
		position absolute
		top 20px
		right 20px
		opacity .6
		cursor pointer
		z-index 20

		&:hover
			opacity 1

	#content-box
		height 100%
		display flex
		align-items center
		justify-content space-between

	.arrow
		margin 0 30px
		font-size 70px
		color white
		opacity .7
		cursor pointer

		&:hover
			opacity 1


	#image-box
		height 100%
		display flex
		align-items center

		.photo-container-large
			height 100%

			img
				display block
				max-height 100%
				max-width 100%

			.title-box
				max-width 100%
				font-size 20px
				font-weight 300
				color white
				overflow hidden
				text-overflow ellipsis
				position relative
				height 1.2em
				margin-top -1.2em
				white-spce nowrap
				background black
				opacity .7
				display none

				.title
					position absolute
					top 0

		&:hover .title-box
			display block

		
	&.visible
		display block



	
	
	